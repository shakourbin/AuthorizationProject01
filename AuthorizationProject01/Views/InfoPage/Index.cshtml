@model FieldPermissionsViewModel

<h1>Info Page</h1>

<form method="post" asp-action="Submit">
    @if (Model.CanViewName)
    {
        <div class="form-group">
            <label>Name</label>
            <input type="text" name="Name" class="form-control"
            @(Model.CanEditName ? "" : "readonly") />
        </div>
    }

    @if (Model.CanViewSurname)
    {
        <div class="form-group">
            <label>Surname</label>
            <input type="text" name="Surname" class="form-control"
            @(Model.CanEditSurname ? "" : "readonly") />
        </div>
    }

    @if (Model.CanViewBirthday)
    {
        <div class="form-group">
            <label>Birthday</label>
            <input type="date" name="Birthday" class="form-control"
            @(Model.CanEditBirthday ? "" : "readonly") />
        </div>
    }

    @if (Model.CanViewBankAccount)
    {
        <div class="form-group">
            <label>Bank Account No</label>
            <input type="number" name="BankAccount" class="form-control"
            @(Model.CanEditBankAccount ? "" : "readonly") />
        </div>
    }

    <button type="submit" class="btn btn-success">Submit</button>
</form>

